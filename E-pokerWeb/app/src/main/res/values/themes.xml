<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Epoker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3c85f2</item>
        <item name="colorPrimaryVariant">#E6FF00</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#257DFF</item>
        <item name="colorSecondaryVariant">#FF0000</item>
        <item name="colorOnSecondary">#FF0000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#333333</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">#1f1f1f</item>
        <item name="android:textColor" >#888888</item>

    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxBackgroundColor">#474747</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="startIconTint">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="Navagation">
        <item name="android:background">#363636</item>
        <item name="android:text">#3DC4D</item>
    </style>


</resources>